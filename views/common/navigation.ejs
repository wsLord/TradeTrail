<nav class="navbar">
    <div class="logo">
        <a href="/">TradeTrail</a>
    </div>
    <ul>
        <li class="<%= typeof activePage !== 'undefined' && activePage === 'rental' ? 'active' : '' %>">
            <a href="/rental">Renting Items</a>
        </li>
        <li class="<%= typeof activePage !== 'undefined' && activePage === 'subscription' ? 'active' : '' %>">
            <a href="/subscription">Subscription Swapping</a>
        </li>
        <li class="<%= typeof activePage !== 'undefined' && activePage === 'secondHand' ? 'active' : '' %>">
            <a href="/secondHand" onclick="return showWarning()">Second-Hand Buying</a>
        </li>
        <li class="<%= typeof activePage !== 'undefined' && activePage === 'cart' ? 'active' : '' %>">
          <a href="/cart">Cart</a>
        </li>   
        <li class="<%= typeof activePage !== 'undefined' && activePage === 'profile' ? 'active' : '' %>">
            <a href="/profile" id="profileLink" data-toggle="popover">Profile</a>
        </li>
    </ul>
</nav>

<% if (messages.error && messages.error.length > 0) { %>
    <div class="flash-message error">
        <% messages.error.forEach(msg => { %>
            <p><%= msg %></p>
        <% }); %>
    </div>
<% } %>

<style>
  body {
    margin: 0;
    font-family: Arial, sans-serif;
  }

  .navbar {
    background-color: #75975e;
    padding: 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    position: fixed;
    top: 0;
    width: 100%;
  }

  .navbar .logo {
    color: white;
    font-size: 20px;
    font-weight: bold;
  }

  .logo a {
    text-decoration: none;
    color: inherit;
    font-weight: bold;
    font-size: 20px;
  }

  .logo a:hover {
    color: #242e20;
  }

  .navbar ul {
    list-style: none;
    display: flex;
    margin: 0;
    padding: 0 20px;
  }

  .navbar ul li {
    margin: 0 15px;
  }

  .navbar ul li a {
    color: white;
    text-decoration: none;
    transition: color 0.3s;
  }

  .navbar ul li a:hover {
    color: #242e20;
  }
  
  /* Active link styling: turns the text color to black when active */
  .navbar ul li.active a {
    color: black;
  }
</style>

<script>
  // Auto-dismiss flash messages after 3 seconds
  setTimeout(function() {
      const flashMessages = document.querySelectorAll('.flash-message');
      flashMessages.forEach(function(msg) {
          msg.style.display = 'none';
      });
  }, 3000);
</script>
<script>
  function showWarning() {
    return confirm("Caution: The exchange of products is entirely your responsibility. We are not liable for any loss or damage. Please proceed with caution!");
  }
</script>

