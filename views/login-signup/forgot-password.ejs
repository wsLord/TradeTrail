<!DOCTYPE html>
<html>
<head>
  <title>Forgot Password</title>
  <link rel="icon" type="image/png" href="/assets/logo2.png">
  <link rel="stylesheet" href="/css/rentalStyles.css">
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">

  <style>
    /* Add similar styles to your login page */
    .container { max-width: 400px; margin: 50px auto; padding: 20px; }
    input { width: 100%; padding: 10px; margin: 10px 0; }
    button { background: #75975e; color: white; padding: 10px 20px; border: none; }
  </style>
</head>
<body>
  <div class="container">
    <h2>Forgot Password</h2>
    <form id="forgotPasswordForm">
      <input type="email" id="email" placeholder="Enter your email" required>
      <button type="submit" style="margin: 20px;">Send Reset Link</button>
    </form>
    <div class="signup-link">
      Remember your password? <a href="/api/auth/login">Login</a>
    </div>
  </div>

  <script>
    document.getElementById("forgotPasswordForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const email = document.getElementById("email").value;
      
      try {
        const response = await fetch('/api/auth/forgot-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email })
        });
        
        const data = await response.json();
        alert(data.message);
        if (response.ok) window.location.href = '/api/auth/login';
      } catch (error) {
        alert('Error sending reset link');
      }
    });
  </script>
</body>
</html>