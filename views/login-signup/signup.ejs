<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>"Business Offer Signup"</title>
  
  <!-- Font Awesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/logo2.png">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Arial', sans-serif;
    }

    body {                  
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f7fff0;
      padding: 20px;
    }

    .container {
      display: flex;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      max-width: 900px;
      width: 100%;
    }

    .info-section {              
      background: #ddead1;
      padding: 40px;
      width: 50%;
    }

    .info-section h1 {
      font-size: 36px;
      color: #333;
      margin-bottom: 10px;
    }

    .info-section h1 span {    
      color: #52694a;
    }

    .info-section p {
      color: #666;
      margin-top: 20px;
      line-height: 1.6;
    }

    .form-section {
      padding: 40px;
      width: 50%;
      background: white;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    input[type="text"], input[type="email"], input[type="password"] {
      padding: 12px;
      margin-bottom: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
    }

    label {
      display: flex;
      align-items: center;
      margin-bottom: 15px;
      color: #666;
    }

    label input[type="checkbox"] {
      margin-right: 10px;
      accent-color: #75975e;
    }

    button {
      background: #75975e;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      cursor: pointer;
      margin-bottom: 15px;
    }

    button:hover {
      background: #4b6043;
    }

    .login-link {
      text-align: center;
      margin-top: 10px;
    }

    .login-link a {
      color: #75975e;
      text-decoration: none;
      font-size: 14px;
    }

    .login-link a:hover {
      color: #4b6043;
      text-decoration: underline;
    }
  </style>
</head>
<body>

  <div class="container">
    <div class="info-section">
      <h1>Trade<span>Trail</span></h1>
      <p>Swap, Sell, Rent, Repeat!</p>
      <img src="/assets/logo.png" alt="TradeTrail Logo" style="display: block; margin: auto; margin-top: 40px; height: 200px;">
    </div>
    <div class="form-section">
      <form id="signupForm">
        <input type="text" id="firstName" placeholder="First name" required>
        <input type="text" id="lastName" placeholder="Last name" required>
        <input type="email" id="email" placeholder="Email address" required>
        <input type="password" id="password" placeholder="Password" required>
        <label>
          <input type="checkbox"> Remember Me
        </label>
        <button type="submit">SIGN UP</button>
        
        <div class="login-link">
          Already have an account? <a href="/api/auth/login">Login</a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Email validation function
    function isValidEmail(email) {
      const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      return re.test(String(email).toLowerCase());
    }
  
    document.getElementById("signupForm").addEventListener("submit", async function(event) {
      event.preventDefault();
  
      const firstName = document.getElementById("firstName").value.trim();
      const lastName = document.getElementById("lastName").value.trim();
      const email = document.getElementById("email").value.trim();
      const password = document.getElementById("password").value.trim();
  
      // Basic field validation
      if (!firstName || !lastName || !email || !password) {
        alert("Please fill in all fields.");
        return;
      }
  
      // Email format validation
      if (!isValidEmail(email)) {
        alert("Please enter a valid email address");
        return;
      }
  
      const userData = { firstName, lastName, email, password };
  
      try {
        const response = await fetch("/api/auth/signup", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(userData),
        });
  
        const data = await response.json();
        console.log("Server Response:", data);
  
        if (response.ok) {
          alert("Signup successful! Please check your email to verify your account");
          window.location.href = "/api/auth/login"; // Redirect to login instead of home
        } else {
          alert(data.message || "Signup failed. Please try again.");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("An error occurred. Please try again later.");
      }
    });
  </script>

</body>
</html>
