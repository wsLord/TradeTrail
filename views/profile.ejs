            $(document).ready(function() {
                $('#profileLink').popover({
                    trigger: 'click',
                    placement: 'bottom',
                    html: true,
                    content: `
                <div class="popover-content">
                    <p><strong>Name:</strong> <%= user.name %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>City:</strong> <%= user.city %></p>
                    <button class="btn btn-primary btn-sm" id="editProfile">Edit Profile</button>
                </div>
            `
                });

                // Close popover when clicking outside
                $(document).on('click', function(e) {
                    if (!$(e.target).closest('#profileLink, .popover').length) {
                        $('#profileLink').popover('hide');
                    }
                });
            });
        </script>

