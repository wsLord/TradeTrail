<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #2c2f38;
            color: white;
        }
        
        .profile-card {
            background: white;
            color: black;
            padding: 20px;
            border-radius: 10px;
            width: 350px;
            margin: 50px auto;
            text-align: center;
            position: relative;
            margin-top: 200px;
        }
        
        .profile-pic {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            cursor: pointer;
            position: relative;
        }
        
        .popover {
            background: #fff;
            color: #000;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }
        
        .popover-body {
            padding: 10px;
        }
        
        .edit-btn {
            background-color: #17a2b8;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <%- include('./common/navigation.ejs') %>

        <main>
            <div class="profile-card">
                <img src="https://via.placeholder.com/100" alt="Profile Picture" class="profile-pic" id="profilePic" data-toggle="popover">
                <h3>
                    <%= user.name %>
                </h3>
                <p><strong>Email:</strong>
                    <%= user.email %>
                </p>
                <p><strong>City:</strong>
                    <%= user.city %>
                </p>
                <p><strong>State:</strong>
                    <%= user.state %>
                </p>
                <p><strong>Country:</strong>
                    <%= user.country %>
                </p>
                <p><strong>Phone:</strong>
                    <%= user.phone %>
                </p>
                <p><strong>Rating:</strong>
                    <%= user.rating %> | <strong>Activity:</strong>
                        <%= user.activity %>
                </p>
                <button class="edit-btn">Edit</button>
            </div>
        </main>

        <script>
            // $(document).ready(function() {
            //     $('#profilePic').popover({
            //         trigger: 'hover',
            //         placement: 'bottom',
            //         html: true,
            //         content: '<button class="btn btn-primary btn-sm">Update Profile Picture</button>'
            //     });
            // });
            // <script>
            $(document).ready(function() {
                $('#profileLink').popover({
                    trigger: 'click',
                    placement: 'bottom',
                    html: true,
                    content: `
                <div class="popover-content">
                    <p><strong>Name:</strong> <%= user.name %></p>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>City:</strong> <%= user.city %></p>
                    <button class="btn btn-primary btn-sm" id="editProfile">Edit Profile</button>
                </div>
            `
                });

                // Close popover when clicking outside
                $(document).on('click', function(e) {
                    if (!$(e.target).closest('#profileLink, .popover').length) {
                        $('#profileLink').popover('hide');
                    }
                });
            });
        </script>

</body>

</html>