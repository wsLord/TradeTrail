        <li>
          <a href="/profile/auction/<%= product._id %>" style="linear-gradient(135deg, #137c73, #074641)">
            <h4>Product: <%= product.title %></h4>
            <% if (product.orderIds && product.orderIds.length > 0) { %>
              <!-- <h4>Buyers:</h4> -->
