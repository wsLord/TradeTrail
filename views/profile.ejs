                <% product.orderIds.forEach(order => { %>
                  <% if (order.buyer) { %>
                    <li>
                      <p>Buyer: <%= order.buyer.fullName %></p>
                      <p>Quantity: <%= order.quantity %></p>
                      <% if (order.otp) { %>
