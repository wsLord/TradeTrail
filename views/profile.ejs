        .profile-card {
            background: #fff;
            color: #333;
            padding: 30px 25px;
            border-radius: 15px;
            width: 1000px;
            margin: 30px auto;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;

            display: flex; 
            justify-content: space-between;
            align-items: center; 
            text-align: left; 
        }

        .profile-content {
            flex: 1;
            padding-right: 30px; 
            margin-bottom: 30px;
        }

        .profile-pic {
            width: 220px;
            height: 220px;
            margin-right: 80px;
            border-radius: 5%;
            object-fit: cover;
            border: 4px solid #c7ddb5;
            padding: 10px;
            transition: all 0.3s ease;
        }

        .profile-pic:hover {
            opacity: 0.9;
            transform: scale(1.05);
            cursor: pointer;
        }

        h3 {
            margin: 30px 30%;
            font-weight: 600;
            font-size: 32px;
            color: black;
        }

        p {
            margin: 10px;
            margin-left: 20%;
            font-size: 20px;
            line-height: 1.6;
        }

        p strong {
            color: #555;
        }

        .badge-card {
            background: #fff;
            color: #333;
            padding: 30px 25px;
            border-radius: 15px;
            width: 1000px;
            margin: 30px auto;
            text-align: center;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease;
        }

    
        .edit-btn {
            background-color: #3E6B48;
            color: white;
            padding: 14px 30px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            margin-bottom: 30px;
        }
    
        .edit-btn:hover {
            background-color: #2d5035;
        }
    
        .popover {
            background: #fff;
            color: #333;
            border-radius: 10px;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
    
        .popover-body {
            padding: 15px;
            font-size: 14px;
        }
    
        @media (max-width: 450px) {
            .profile-card {
                width: 90%;
                padding: 25px 20px;
            }
        }

        .badges-container {
            display: flex;
            gap: 10px;
            flex-wrap: wrap; /* Makes sure badges wrap to next line in case of too many */
            justify-content: space-around;
            align-items: center;
            max-width: 800px;
            margin: 10px auto;
            margin-top: 20px;
        }

        .badge-img {
            width: 180px;
            height: 200px;
            object-fit: cover;
            border-radius: 8px; 
            transition: transform 0.2s ease;
        }

        .badge-img:hover {
            transform: scale(1.1); 
            cursor: pointer;
        }


    </style>
    
</head>

<body>

    <%- include('./common/navigation.ejs') %>

        <main>

            <div class="profile-card" style="margin-top: 90px;">
                <div class="profile-content">
                    <h3><%= user.name %></h3>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>City:</strong> <%= user.city %></p>
                    <p><strong>State:</strong> <%= user.state %></p>
                    <p><strong>Country:</strong> <%= user.country %></p>
                    <p><strong>Phone:</strong> <%= user.phone %></p>
                    <p><strong>Rating:</strong> <%= user.rating %></p>
                </div>
                <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png"
                    alt="Profile Picture" class="profile-pic" id="profilePic" data-toggle="popover">
            </div>
            

            <div class="badge-card">
                <p style="margin: 5px;"><strong>Badges:</strong></p>
                <div class="badges-container">
                    <% user.badges.forEach(function(badge) { %>
                        <img src="<%= badge %>" alt="Badge" class="badge-img">
                    <% }); %>
                </div>
                
            </div>

            <button class="edit-btn">Edit</button>
            

        </main>

