<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= product.title %> Details</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/rentalStyles.css">
  <link rel="icon" type="image/png" href="/assets/logo2.png">
  
  <style>
    .rental-calendar {
      background: #f8f9fa;
      padding: 20px;
      border-radius: 8px;
      margin: 20px 0;
    }
    .price-summary-card {
      background: #fff;
      border: 1px solid #dee2e6;
      border-radius: 8px;
      padding: 15px;
      margin-top: 20px;
    }
    .calculation-breakdown {
      margin-top: 10px;
      padding: 10px;
      background: #e9ecef;
      border-radius: 4px;
    }
    .section-title {
      font-size: 1.2em;
      color: #333;
      text-decoration: underline;
      margin-bottom: 10px;
    }
    .slider {
      position: relative;
      max-width: 100%;
      height: 300px;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #f5f5f5;
    }
    .slide {
      display: none;
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
    .active {
      display: block;
    }
    .prev, .next {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background-color: rgba(0, 0, 0, 0.5);
      color: white;
      border: none;
      padding: 10px;
      cursor: pointer;
    }
    .prev { left: 10px; }
    .next { right: 10px; }

    .disabled-button {
      background-color: #ccc;
      color: #666;
      cursor: not-allowed;
    }
  </style>
</head>
<body>
  <div id="navbar">
    <%- include('../common/navigation.ejs') %>
  </div>

  <main class="product-details-container">
    <div class="details-grid">
      <div class="product-image-column">
        <div class="slider">
          <% product.imageUrls.forEach((image, index) => { %>
            <img src="<%= image %>" class="slide <% if(index === 0) { %> active <% } %>" alt="Product Image">
          <% }) %>
          <button class="prev" onclick="changeSlide(-1)">&#10094;</button>
          <button class="next" onclick="changeSlide(1)">&#10095;</button>
        </div>
        <h1><%= product.title %></h1>
        <div class="price-summary-card">
          <h3>Pricing Details</h3>
          <p>Rate: ₹<%= product.price %>/<%= product.rate %></p>
          <p>Seller: <%= product.seller.fullName %></p>
          <p>Security Deposit: ₹<%= product.securityDeposit %></p>
          <div class="calculation-breakdown" id="calculationDetails"></div>
          <h4 class="total-price">Total Estimate: ₹<span id="totalPrice">0</span></h4>
        </div>
      </div>
      
      <div class="product-info-column">
        <h2 class="section-title">Product Details</h2>
        <p class="description"><%= product.description %></p>
        <p>Seller: <%= product.seller.fullName %></p>
        <p>Buyer: <%= product.buyer ? product.buyer.fullName : 'Not Sold Yet' %></p>
        
        <div class="product-meta">
          <p><strong>Location:</strong> <%= product.location %></p>
          <p><strong>Available Stock:</strong> <%= product.quantity %></p>
          <% if (product.currentBooking) { %>
            <p class="availability-notice">
              Next available after: <%= new Date(product.currentBooking.rentalEnd).toLocaleDateString('en-IN') %>
            </p>
          <% } %>
        </div>

        <div class="rental-calendar">
          <form action="/rental/add-to-cart/<%= product.id %>" method="POST">
            <div class="form-group">
              <label for="rentalStart">Start Date:</label>
              <input type="date" name="rentalStart" id="rentalStart" required min="<%= new Date().toISOString().split('T')[0] %>">
            </div>
            
            <div class="form-group">
              <label for="rentalEnd">End Date:</label>
              <input type="date" name="rentalEnd" id="rentalEnd" required min="<%= new Date().toISOString().split('T')[0] %>">
            </div>

            <div class="form-actions">
              <button type="submit" class="add-to-cart-button <%= product.buyer ? 'disabled-button' : '' %>" <%= product.buyer ? 'disabled' : '' %>>
                Add to Cart (₹<span id="dynamicPrice">0</span>)
              </button>
              <button type="submit" formaction="/rental/rent/<%= product.id %>" class="buy-now-button <%= product.buyer ? 'disabled-button' : '' %>" <%= product.buyer ? 'disabled' : '' %>>
                Rent Now (₹<span id="dynamicPrice2">0</span>)
              </button>
              <% if (product.buyer) { %>
                <p class="rented-message" style="color: red; font-weight: bold; margin-top: 10px;">
                  Already Rented By: <%= product.buyer.fullName %>
                </p>
              <% } %>
              
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script src="/assets/rentalDetails.js"></script>
  <script>
    let slideIndex = 0;
    const slides = document.querySelectorAll(".slide");
    
    function changeSlide(n) {
      slides[slideIndex].classList.remove("active");
      slideIndex = (slideIndex + n + slides.length) % slides.length;
      slides[slideIndex].classList.add("active");
    }
  </script>

</body>
</html>
