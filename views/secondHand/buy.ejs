<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/css/main.css">
  <!-- Added styles to match rental search page -->
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/rentalStyles.css">
  <link rel="stylesheet" href="/css/navigation.css">
</head>
<body>
  <!-- Using same navbar container as rental page -->
  <div id="navbar">
    <%- include('../common/navigation.ejs') %>
  </div>

  <main>
    <h1>Second Hand Products</h1></br>
    <form action="/secondHand/buy" method="GET" class="search-form">
      <input 
        type="text" 
        name="search" 
        placeholder="Search products by title, description, or location..."
        value="<%= searchQuery || '' %>"
      >
      <button type="submit">Search</button>
    </form>
    <button type="button" onclick="window.location.href='/secondHand/sell'">POST AN ITEM !</button>
    
    <% if (prods.length > 0) { %>
      <!-- Changed container class names to mimic rental search layout -->
      <div class="rental-list">
        <% for (let product of prods) { %>
          <div class="rental-item">
            <div class="product-card">
              <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
              </div>
              <div class="product-info">
                <h3><%= product.title %></h3>
                <div class="price-info">
                  <p class="direct-price">Direct Purchase: ₹<%= product.price %></p>
                  <p class="auction-price">Auction Starts At: ₹<%= product.min_price %></p>
                </div>
                <p class="description"><%= product.description %></p>
                <p class="location"><%= product.location %></p>
                <p class="seller">
                  <b>Seller:</b> <%= product.seller && product.seller.fullName ? product.seller.fullName : 'Unknown' %>
                </p>
                <div class="button-group vertical">
                  <a href="/secondHand/buy/<%= product._id %>" class="btn auction-btn">Auction</a>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <h1>No Products Found!</h1>
    <% } %>
  </main>
</body>
</html>
