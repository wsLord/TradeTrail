<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../common/navigation.ejs') %>
  
  <main>
    <form class="product-form" action="/subscription/sell/add-product" method="POST">
      <div class="form-control">
        <label for="platform_name">Platform Name</label>
        <select name="platform_name" id="platform_name" required onchange="handlePlatformChange()">
          <option value="Netflix" data-image="/images/platforms/netflix.png">Netflix</option>
          <option value="Amazon Prime" data-image="/images/platforms/prime.png">Amazon Prime</option>
          <option value="Disney+" data-image="/images/platforms/disney.png">Disney+</option>
          <option value="Hulu" data-image="/images/platforms/hulu.png">Hulu</option>
          <option value="Other" data-image="/images/platforms/default.png">Other</option>
        </select>

        <input type="text" name="custom_platform" id="custom_platform" placeholder="Enter platform name" style="display: none;">
      </div>
      
      <div class="form-control" style="display: none;">
        <input type="hidden" name="imageUrl" id="imageUrl" value="/images/platforms/netflix.png">
      </div>
      
      
      <div class="form-control">
        <label for="price">Actual Price</label>
        <input type="number" name="price" id="price" step="0.01" required>
      </div>
      <div class="form-control">
        <label for="min_price">Minimum Auction Price</label>
        <input type="number" name="min_price" id="min_price" step="0.01" required>
      </div>
      <div class="form-control">
        <label for="startDate">Start Date</label>
        <input type="date" name="startDate" id="startDate" required>
      </div>
      <div class="form-control">
        <label for="endDate">End Date</label>
        <input type="date" name="endDate" id="endDate" required>
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea name="description" id="description" rows="5" required></textarea>
      </div>
      
      <button class="btn" type="submit">Next â†’</button>
    </form>
  </main>
  
  <script>
    function handlePlatformChange() {
      const platformSelect = document.getElementById("platform_name");
      const customPlatformInput = document.getElementById("custom_platform");
      const imageUrlInput = document.getElementById("imageUrl");
      const platformImage = document.getElementById("platformImage"); // Select the image element
  
      const selectedOption = platformSelect.options[platformSelect.selectedIndex];
      const selectedImage = selectedOption.getAttribute("data-image");
  
      imageUrlInput.value = selectedImage;
      platformImage.src = selectedImage; // Update the image preview dynamically
  
      if (platformSelect.value === "Other") {
        customPlatformInput.style.display = "block";
        customPlatformInput.required = true;
      } else {
        customPlatformInput.style.display = "none";
        customPlatformInput.required = false;
      }
    }
  </script>
  
</body>
</html>
