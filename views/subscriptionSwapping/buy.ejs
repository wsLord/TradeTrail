<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="stylesheet" href="/css/main.css">
  <!-- Added styles to match rental search page -->
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/rentalStyles.css">
  <link rel="stylesheet" href="/css/navigation.css">
</head>
<body>
  <div id="navbar">
    <%- include('../common/navigation.ejs') %>
  </div>

  <main>
    <h1>Subscriptions</h1>
    <form action="/subscription/buy" method="GET" class="search-form">
      <input 
        type="text" 
        name="search" 
        placeholder="Search products by platform name or description..."
        value="<%= searchQuery || '' %>"
      >
      <button type="submit">Search</button>
    </form>
    
    <% if (prods.length > 0) { %>
      <div class="rental-list">
        <% for (let product of prods) { %>
          <div class="rental-item">
            <div class="product-card">
              <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="<%= product.platform_name %>">
              </div>
              <div class="product-info">
                <h3><%= product.platform_name %></h3>
                <p class="price">Price: â‚¹<%= product.price %></p>
                <p class="description"><%= product.description %></p>
                <% if (product.seller && product.seller.fullName) { %>
                  <p class="seller"><b>Seller:</b> <%= product.seller.fullName %></p>
                <% } %>
                <div class="button-group vertical">
                  <a href="/subscription/buy/<%= product._id %>" class="btn auction-btn">Auction</a>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } else { %>
      <h1>No Products Found!</h1>
    <% } %>
  </main>
</body>
</html>
