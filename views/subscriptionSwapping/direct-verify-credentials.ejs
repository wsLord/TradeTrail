<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Direct Selling Verification</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/forms.css">
  <style>
    .alert-error {
      color: #721c24;
      background-color: #f8d7da;
      border: 1px solid #f5c6cb;
      padding: 10px;
      margin: 20px 0;
      border-radius: 4px;
    }
    .button-group {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin-top: 2rem;
    }
  </style>
  <script>
    function handleSkip() {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '/subscription/verify-direct-credentials';
      form.setAttribute('novalidate', 'novalidate');
      
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = 'action';
      input.value = 'skip';
      form.appendChild(input);
      
      document.body.appendChild(form);
      form.submit();
    }
  </script>
</head>
<body>
  <%- include('../common/navigation.ejs') %>
  <main>
    <form class="credentials-form" action="/subscription/verify-direct-credentials" method="POST">
      <h2>Verify Platform Credentials</h2>
      <div class="form-control">
        <label for="email">Account Email</label>
        <input type="email" name="email" id="email">
      </div>
      <div class="form-control">
        <label for="password">Account Password</label>
        <input type="password" name="password" id="password">
      </div>
      <div class="button-group">
        <button type="submit" name="action" value="verify" class="btn-primary">
          Verify Credentials
        </button>
        <button type="button" onclick="handleSkip()" class="btn-secondary">
          Skip for Now
        </button>
      </div>
    </form>
  </main>
</body>
</html>